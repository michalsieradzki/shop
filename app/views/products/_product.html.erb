
  <tr>
    <td>
      <%= product.image_url %>
    </td>
    <td>
      <span class="product_title"><%= product.title %></span>
    </td>
    <td>
      <%= product.description %>
    </td>
    <td>
      <%= print_price(product.price) %>
    </td>
    <td>
      <%= print_stock(product.stock) %>
    </td>
    <td>
      <%= link_to 'Pokaż', product %>
    </td>
    <td>
      <%= link_to 'Edytuj', edit_product_path(product) %>
    </td>
    <td>
      <%= link_to 'Usuń', product, method: :delete, data: { confirm: "Czy na pewno?" } %>
    </td>
  </tr>

